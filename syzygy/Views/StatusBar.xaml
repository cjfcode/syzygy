<UserControl x:Class="Syzygy.StatusBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Syzygy"
             mc:Ignorable="d" 
             d:DesignHeight="30" d:DesignWidth="800"
             Background="{StaticResource StatusBarActiveBrush}"
             >

    <UserControl.DataContext>
        <local:StatusBarViewModel/>
    </UserControl.DataContext>
    
    <DockPanel>
        <TextBlock Margin="10 0 10 0" Width="auto" VerticalAlignment="Center" Text="games 767" Foreground="{StaticResource StatusBarTextBrush}" />
        <TextBlock Margin="10 0 10 0" Width="auto" VerticalAlignment="Center" Text="Test" Foreground="{StaticResource StatusBarTextBrush}" />
        <TextBlock Margin="10 0 10 0" Width="auto" VerticalAlignment="Center" HorizontalAlignment="Right" Text="Testing" Foreground="{StaticResource StatusBarTextBrush}" />
    </DockPanel>
</UserControl>